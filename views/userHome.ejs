                <a onclick="show()"><div class="box3">
                    <p>Track Grievance</p>
                    <img src="../static/images/trackGrievance.png">
                </div></a>
            </div>
            <div class="popup">
                <div class="title">Track Grievance</div>
                <div class="space"></div>
                <form action="track" method="post">
                    <h4>Grievance number</h4>
                    <div class="space"></div>
                    <input type="text" name ="com_id2"placeholder="Enter Grievance number" required>
                    <div class="space"></div>
                    <input type="submit" name="" value="Track">
                </form>
            </div>
            <!-- <div class="popup2">
                <div class="title">Send Feedback</div>
                <div class="space"></div>
                <form action="user_response" method="post">
                    <h4>Message</h4>
                    <div class="space"></div>
